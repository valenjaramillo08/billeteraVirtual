<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.billeteravirtual.billeteravirtual.ViewController.CategoriasUsuarioViewController"
            style="-fx-background-color: #f4f4f4;">

    <children>

        <!-- Título -->
        <Label layoutX="40.0" layoutY="25.0" text="Gestión de Categorías"
               style="-fx-font-size: 22px; -fx-text-fill: #2c3e50;" />

        <!-- ComboBox Cuenta -->
        <HBox layoutX="40.0" layoutY="65.0" spacing="10">
            <Label text="Cuenta:" style="-fx-font-size: 14px;" />
            <ComboBox fx:id="comboCuentas" prefWidth="200.0" />
        </HBox>

        <!-- Tabla de categorías -->
        <TableView fx:id="tableCategoria" layoutX="40.0" layoutY="110.0" prefHeight="250.0" prefWidth="330.0">
            <columns>
                <TableColumn fx:id="columNombre" prefWidth="150.0" text="Nombre" />
                <TableColumn fx:id="columSaldo" prefWidth="150.0" text="Saldo" />
            </columns>
        </TableView>

        <!-- Botones Modificar/Eliminar -->
        <HBox layoutX="40.0" layoutY="380.0" spacing="20">
            <Button fx:id="btnModificar" onAction="#onModificarCategoria" text="Modificar"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;" />
            <Button fx:id="btnEliminar" onAction="#onEliminarCategoria" text="Eliminar"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
        </HBox>

        <!-- Separador visual -->
        <Separator layoutX="400.0" layoutY="70.0" prefHeight="320.0" orientation="VERTICAL" />

        <!-- Sección crear categoría -->
        <VBox layoutX="430.0" layoutY="110.0" spacing="15.0">

            <Label text="Crear nueva categoría"
                   style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />

            <HBox spacing="10.0">
                <Label text="Nombre:" prefWidth="70.0" />
                <ComboBox fx:id="comboNombreCategoria" prefWidth="200.0" />
            </HBox>

            <HBox spacing="10.0">
                <Label text="Saldo:" prefWidth="70.0" />
                <TextField fx:id="txtSaldoCategoria" prefWidth="200.0" />
            </HBox>

            <Button fx:id="btnCrear" text="Crear" onAction="#onCrearCategoria"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white;"
                    prefWidth="100.0" />

        </VBox>

    </children>
</AnchorPane>
