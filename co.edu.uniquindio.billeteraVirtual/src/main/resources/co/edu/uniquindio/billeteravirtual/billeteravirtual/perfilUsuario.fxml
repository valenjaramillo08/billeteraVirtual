<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="560.0" prefWidth="750.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.billeteravirtual.billeteravirtual.ViewController.perfilUsuarioViewController"
            style="-fx-background-color: #f4f4f4;">

   <children>

      <!-- Título -->
      <Label layoutX="30.0" layoutY="25.0" text="Perfil del Usuario"
             style="-fx-font-size: 24px; -fx-text-fill: #2c3e50;" />

      <!-- Subtítulo -->
      <Label layoutX="30.0" layoutY="55.0" text="Modificar datos personales"
             style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;" />

      <!-- Contenedor de campos -->
      <VBox layoutX="100.0" layoutY="100.0" spacing="25.0" prefWidth="550.0">

         <!-- Campo Nombre -->
         <HBox spacing="10.0">
            <Label text="Nombre:" prefWidth="100.0" alignment="CENTER_RIGHT"
                   style="-fx-font-size: 14px;" />
            <TextField fx:id="txtNombre" prefWidth="300.0" />
         </HBox>

         <!-- Campo Apellido -->
         <HBox spacing="10.0">
            <Label text="Apellido:" prefWidth="100.0" alignment="CENTER_RIGHT"
                   style="-fx-font-size: 14px;" />
            <TextField fx:id="txtApellido" prefWidth="300.0" />
         </HBox>

         <!-- Campo Correo -->
         <HBox spacing="10.0">
            <Label text="Correo:" prefWidth="100.0" alignment="CENTER_RIGHT"
                   style="-fx-font-size: 14px;" />
            <TextField fx:id="txtCorreo" prefWidth="300.0" />
         </HBox>

      </VBox>

      <!-- Botón Modificar -->
      <Button fx:id="btnModificar" layoutX="315.0" layoutY="360.0"
              text="Guardar Cambios"
              onAction="#onModificarDatos"
              style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8px;"/>

   </children>
</AnchorPane>
