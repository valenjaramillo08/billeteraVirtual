<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="506.0" prefWidth="689.0"
            style="-fx-background-color: #F9F9F9;"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.billeteravirtual.billeteravirtual.ViewController.usuario.cuentas.GestionarCuentaViewController">

    <children>
        <!-- Título -->
        <Label layoutX="20.0" layoutY="25.0" text="Gestión de Cuentas"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />

        <!-- Tabla de cuentas -->
        <TableView fx:id="tableCuentas" layoutX="17.0" layoutY="70.0" prefHeight="340.0" prefWidth="655.0">
            <columns>
                <TableColumn fx:id="tcNombreBanco" prefWidth="231.0" text="Nombre Banco" />
                <TableColumn fx:id="tcNumeroCuenta" prefWidth="224.0" text="Número de Cuenta" />
                <TableColumn fx:id="tcIdCuenta" prefWidth="200.0" text="ID de Cuenta" />
            </columns>
        </TableView>

        <!-- Botón de detalles -->
        <Button fx:id="btDetallesCuenta"
                layoutX="270.0"
                layoutY="430.0"
                prefWidth="150.0"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                onAction="#mostrarDetallesCuenta"
                text="Detalles de la cuenta" />
    </children>
</AnchorPane>
