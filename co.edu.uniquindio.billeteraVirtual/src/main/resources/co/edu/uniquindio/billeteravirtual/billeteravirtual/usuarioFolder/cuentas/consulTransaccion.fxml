<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<AnchorPane prefHeight="480.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.billeteravirtual.billeteravirtual.ViewController.usuario.cuentas.ConsulTransaccionViewController"
            style="-fx-background-color: #F4F4F4;">
    <children>

        <Label layoutX="250.0" layoutY="30.0" text="Consulta de transacciones"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <ComboBox fx:id="cbTipo" layoutX="60.0" layoutY="90.0" prefWidth="200.0"
                  promptText="Seleccione tipo"
                  style="-fx-font-size: 14px;" />

        <Button fx:id="btBuscar" layoutX="280.0" layoutY="90.0" prefWidth="110.0" prefHeight="39.0"
                text="Buscar" onAction="#buscarTransaccion"
                style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px;" />

        <Separator layoutX="30.0" layoutY="140.0" prefWidth="640.0" />

        <TableView fx:id="tableTransacciones" layoutX="30.0" layoutY="160.0"
                   prefHeight="230.0" prefWidth="640.0"
                   style="-fx-font-size: 13px;">
            <columns>
                <TableColumn fx:id="tcFecha" prefWidth="140.0" text="Fecha" />
                <TableColumn fx:id="tcMonto" prefWidth="140.0" text="Monto" />
                <TableColumn fx:id="tcCategoria" prefWidth="180.0" text="CategorÃ­a" />
                <TableColumn fx:id="tcTipo" prefWidth="180.0" text="Tipo" />
            </columns>
        </TableView>

        <Button fx:id="btVerTodas" layoutX="285.0" layoutY="410.0" prefWidth="130.0" prefHeight="40.0"
                text="Ver todas" onAction="#todasTransacciones"
                style="-fx-background-color: #777777; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px;" />

    </children>
</AnchorPane>
